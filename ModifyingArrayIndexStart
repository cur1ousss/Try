package project1;


\\CONCLUSION 
    // cannot modify indexing 
    // indexing always start from 0 as it is INHErrent and fundamental right of an array
                 // exceoption in R language indexing start from 1
 
#include<iostream>
using namespace std;

void line(){
    cout<<"\n\n*****************************************\n";
}
int main(){
    line();

int arr[5];
for(int i=1;i<=5;i++){
    cin>>arr[i];
}

cout<<"\npritning array";

for(int i=1;i<=5;i++){
    cout<<"\t"<<arr[i];
}
line();
    return 0;
}


